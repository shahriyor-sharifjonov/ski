mixin item(title, num)
    a(href="resort.html").intro__items-item.swiper-slide
        p.intro__items-num 0#{num} 
        p.intro__items-title #{title}
            img(src="@img/icon-right-arrow.svg", alt="" draggable="false" loading="lazy")
        .intro__items-item-img
            img(src=`@img/intro-img-${num}.png`, alt="" draggable="false" loading="lazy")


