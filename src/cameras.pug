                                        </svg>
                                        span.camera__item-span #[a(href="#!") @dombay_ru] (14 256 участников)
            include components/menu
            +menu2(2)
            include components/footer 
            +footer 
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js") 
        script(src="js/app.js")  